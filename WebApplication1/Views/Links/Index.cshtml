@model LinkIndexViewModel

@{
    ViewBag.Title = "Alle Links";
}

@section ModuleMenu
{
    @Html.Partial("LinksMenu", 0)
}

<table class="table table-striped table-bordered table-condensed">

    <tr>
        <th class="visible-lg visible-md">Id</th>
        <th>Name</th>
        <th class="visible-lg visible-md">Beschreibung</th>
        <th>Link</th>
        <th>
            <span class="hidden-xs">Optionen</span>
            <span class="visible-xs">Opt.</span>
        </th>
    </tr>

    @foreach (var l in Model.Links)
    {
        <tr>
            <td class="visible-lg visible-md">@l.Id</td>
            <td>@l.Name</td>
            <td class="visible-lg visible-md">@l.Description</td>
            <td>
                <a href="@l.URL" target="_blank">
                    <span class="glyphicon glyphicon-link"></span>
                </a>
            </td>
            <td>
                <a href="@Url.Action("Update", "Links", new {id = l.Id})">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="@Url.Action("Delete", "Links", new {id = l.Id})">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
    }

</table>

@Html.Partial("Pagination", Model.Pagination)
