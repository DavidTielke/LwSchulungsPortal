<div class="form-group">
    <div class="row">
        <div class="col-md-4">
            <label for="@Html.IdForModel()">@Html.DisplayNameForModel()</label>
        </div>
        <div class="col-md-8">
            <input type="hidden" name="@Html.NameForModel()" value="false"/>
            <input type="checkbox" name="@Html.NameForModel()" id="@Html.IdForModel()" value="@Html.ValueForModel()"/>
        </div>
    </div>
    <div class="text-danger">@Html.ValidationMessageFor(m => m)</div>
</div>